

	***************************  SQL  ********************************	
		
		//DELETE 
		DELETE FROM 테이블명 WHERE 칼럼명 = 조건

		//UPDATE
		UPDATE 테이블명 SET 칼럼명 = '변경할값' WHERE 조건

		//SELECT
		SELECT 칼럼명 FROM 테이블명 WHERE 조건

		//INSERT
		INSERT INTO 테이블명(칼럼명1 ,칼럼명) VALUE(값1 , 값2 ) WHERE 조건	
		
		//WHERE
		where m_id=? and m_password=?  두개 이상일때 AND 사용

		//count
		SELECT count(*) from board //count : 검색개수
		
		//내림차순
		SELECT * FROM 테이블명 ORDER by 기준칼럼명 DESC
		//오름차순
		SELECT * FROM 테이블명 ORDER by 기준칼럼명 ASC
		
		//LIMIT
		SELECT * FROM 테이블명 ORDER by 기준칼럼명 DESC LIMIT 시작값 제한값
		
		//LIKE : 비교연산자 [ 필드명 like %검색단어%(문자이면 '%검색단어%') ]
						? : 하나의 문자 % % : 여러문자
		SELECT * FROM 테이블명 WHERE 필드명 LIKE '%검색데이터%'				
		select * from board where b_title like '%검색데이터%'				
						
		
		
		
		
		